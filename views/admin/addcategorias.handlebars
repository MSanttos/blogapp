{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Nova categoria: </h3>
<div class="card">
  <div class="card-body">
    <form method="post" action="/admin/categorias/nova">
      <div class="form-group">
        <label for="nome">Nome: </label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome da categoria">
      </div>
      <div class="form-group">
        <label for="slug">Slug: </label>
        <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug da categoria na URL"> 
      </div>
      <button type="submit" class="btn btn-primary mt-4">Criar categoria</button>
    </form>
  </div>
</div>