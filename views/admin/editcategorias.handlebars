{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar categoria: </h3>
<div class="card">
  <div class="card-body">
    <form method="post" action="/admin/categorias/edit">
      <input type="hidden" name="id" value="{{categoria._id}}">
      <div class="form-group">
        <label for="nome">Nome: </label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome da categoria" value="{{categoria.nome}}">
      </div>
      <div class="form-group">
        <label for="slug">Slug: </label>
        <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug da categoria" style="text-transform: lowercase;" value="{{categoria.slug}}"> 
      </div>
      <button type="submit" class="btn btn-primary mt-4">Editar categoria</button>
      <a class="btn btn-success mt-4" href="/admin/categorias">Voltar</a>
    </form>
  </div>
</div>