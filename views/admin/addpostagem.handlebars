{{#each erros}}
  <div class="alert alert-danger">
    {{texto}}
  </div>
  {{else}}

{{/each}} 

<div class="card">
  <div class="card-body">
    <h4 class="card-title">Nova Postagem</h4>
    <form class="form-group" action="/admin/postagens/nova" method="post">

      <label for="titulo">Título: </label>
      <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Título">

      <label for="conteudo">Slug: </label>
      <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug da URL">
      
      <label for="descricao>">Descrição: </label>
      <input class="form-control" id="descricao" name="descricao" placeholder="Descrição">

      <label for="conteudo">Conteúdo: </label>
      <textarea class="form-control" id="conteudo" name="conteudo" placeholder="Conteúdo será mostrado em (Saiba mais)"></textarea>
      
      <label for="categoria">Categoria: </label>
      <select class="form-control" id="categoria" name="categoria">
        {{#each categorias}}
          <option value="{{id}}">{{nome}}</option>
          {{else}}
          <option value="0">Nenhuma categoria cadastrada</option>
        {{/each}}
      </select>

      <button class="btn btn-primary mt-4" type="submit">Criar postagem</button>
    </form>
  </div>
</div>